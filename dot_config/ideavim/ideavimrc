nnoremap cc <Nop>
nnoremap <Esc><Esc> :nohlsearch<CR><Esc>
inoremap jj <Right><Esc>

nnoremap <Space> <Nop>
nnoremap <SID> <Nop>

nnoremap j gj
nnoremap k gk

nnoremap d "_d
nnoremap dd "_dd
xnoremap d "_d
xnoremap p "_dP

nnoremap yd d
nnoremap ydd dd
xnoremap yd d
xnoremap yp dP

nnoremap <Left> :echoe "Use h"<CR>
nnoremap <Right> :echoe "Use l"<CR>
nnoremap <Up> :echoe "Use k"<CR>
nnoremap <Down> :echoe "Use j"<CR>

" Quicker window movement
nnoremap <C-j> <C-w>j
nnoremap <C-k> <C-w>k
nnoremap <C-h> <C-w>h
nnoremap <C-l> <C-w>l

nnoremap <Leader>vs :vs<CR>

